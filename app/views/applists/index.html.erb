<p style="color: green"><%= notice %></p>
<div class="container-fluid">

  <div class="d-flex justify-content-between align-items-center">
    <h1>Applists</h1>
    <%= link_to "New applist", new_applist_path, class: "btn btn-outline-primary" %>
  </div>

<table class="table table-success table-striped table-hover" style="text-align: center;">
  <thead>
    <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Logo</th>
    <th>App_Link</th>
    <th>Redeem_type</th>
    <th>Bonus</th>
    <th>Minimum_withdrawl</th>
    <th>Referral_code</th>
    <th>Show</th>
    </tr>
  </thead>
  
  <% @applists.each_with_index do |applist,index| %>
  <tr>
    <td><%= index+1 %></td>
    <%= render applist %>
    <td>
      <%= link_to "Show this applist", applist, class: "btn btn-outline-primary" %>
    </td>
  </tr>
  <% end %>
  
</table>
<div class="d-flex justify-content-between">
  <%= will_paginate @teams,renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <span><%= page_entries_info(@teams)%></span>
</div>
</div>

